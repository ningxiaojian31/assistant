<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PubOrdersActivity">

    <TextView
        android:id="@+id/tv_pub_ord_info"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="18sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:text="发布的信息："/>

    <TextView
        android:textSize="16sp"
        android:id="@+id/tv_pub_ord_content"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_height="20dp"
        android:text="发布的信息内容"/>

    <TextView
        android:id="@+id/tv_pub_ord_user"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:text="预约人的信息："/>

    <TextView
        android:textSize="16sp"
        android:id="@+id/tv_pub_ord_loginname"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_height="20dp"
        android:text="预约人的登录名"/>

    <TextView
        android:textSize="16sp"
        android:id="@+id/tv_pub_ord_reallyname"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_height="20dp"
        android:text="预约人的真实名"/>


    <TextView
        android:textSize="16sp"
        android:id="@+id/tv_pub_ord_wxnumber"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:text="预约人的微信号"/>

</LinearLayout>